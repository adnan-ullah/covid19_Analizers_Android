<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    tools:context=".MainActivity"
    android:id="@+id/country_data_entry_fragment"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.jgabrielfreitas.core.BlurImageView
            android:id="@+id/imageViewLoginbg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/coronaoffwhite"
            android:alpha=".7"/>

    </FrameLayout>


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gotham"
                android:text="Division Cases Update "
                android:textStyle="bold"
                android:textColor="@color/cardview_shadow_start_color"
                android:textSize="25sp" />

        </LinearLayout>




    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/calibri"


        android:text="Stay safe and you will save lives"

        android:textColor="#9A191818"
        android:textSize="18sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:orientation="vertical"
        android:paddingLeft="32dp"
        android:paddingRight="32dp">
        <com.mc0239.ComboBox
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="55dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_button"
            android:id="@+id/updateStateCombo"
            android:textAlignment="center"
            android:backgroundTint="@color/cardViewColor"

            >


        </com.mc0239.ComboBox>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#9A191818"
            android:theme="@style/EditScreenTextInputLayoutStyle">

            <EditText
                android:id="@+id/stateConfirmCases"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawablePadding="16dp"

                android:fontFamily="@font/calibri"
                android:hint="Confirm Cases"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="#9A191818"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textColorHint="#9A191818"
            android:layout_marginLeft="50dp"
            android:theme="@style/EditScreenTextInputLayoutStyle"
            android:background="#37EDA9A9"
            >

            <EditText
                android:id="@+id/stateNewCases"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawablePadding="16dp"

                android:fontFamily="@font/calibri"
                android:hint="New Cases"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="#9A191818"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#9A191818"
            android:theme="@style/EditScreenTextInputLayoutStyle">

            <EditText
                android:id="@+id/stateActiveCases"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawablePadding="16dp"

                android:fontFamily="@font/calibri"
                android:hint="Active Cases"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="#9A191818"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#9A191818"
            android:theme="@style/EditScreenTextInputLayoutStyle">

            <EditText
                android:id="@+id/stateRecoverCases"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawablePadding="16dp"

                android:fontFamily="@font/calibri"
                android:hint="Recovered Cases"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="#9A191818"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#9A191818"
            android:layout_marginLeft="50dp"
            android:background="#37EDA9A9"
            android:theme="@style/EditScreenTextInputLayoutStyle">

            <EditText
                android:id="@+id/statenNewRecoverCases"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawablePadding="16dp"

                android:fontFamily="@font/calibri"
                android:hint="New Recovered Cases"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="#9A191818"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#9A191818"
            android:theme="@style/EditScreenTextInputLayoutStyle">

            <EditText
                android:id="@+id/stateDeathCases"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawablePadding="16dp"
                android:drawableRight="@drawable/ic_white"
                android:fontFamily="@font/calibri"
                android:hint="Death Cases"

                android:inputType="text"
                android:maxLines="1"
                android:textColor="#9A191818"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#9A191818"
            android:layout_marginLeft="50dp"
            android:background="#37EDA9A9"
            android:theme="@style/EditScreenTextInputLayoutStyle">


            <EditText
                android:id="@+id/stateNewDeathCases"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawablePadding="16dp"

                android:fontFamily="@font/calibri"
                android:hint="New Death Cases"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="#9A191818"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="8dp"
            android:gravity="center"

            android:orientation="horizontal">

            <Button
                android:id="@+id/AddState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:background="@drawable/button_back_color_change"
                android:fontFamily="@font/calibri"

                android:text="Add"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textColor="#9A191818"
                android:textSize="16dp"


               />

            <Button
                android:id="@+id/updateDivisionData"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:background="@drawable/button_back_color_change"
                android:fontFamily="@font/calibri"
                android:text="Update Now"
                android:textAllCaps="false"
                android:textColor="#9A191818"
                android:textSize="16sp"
                android:textStyle="bold" />


        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/calibri"
            android:text="------"
            android:textAlignment="center"
            android:textColor="#96ffffff"
            android:textSize="16sp" />


    </LinearLayout>


</RelativeLayout>
